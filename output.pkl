import "pkl:xml" as xml
import "android.pkl"
import "string.pkl"

languages = List(
    new string.Language {
        strings = List(
            new string.SingleResourceString {
                name = "Test"
                value = "TestValue"
            },
            new string.QuantityResourceString {
                name = "Quantity"
                options = List(
                    new string.QuantityOption {
                        quantity = "one"
                        value = "Thing"
                    },
                    new string.QuantityOption {
                        quantity = "other"
                        value = "Things"
                    }
                )
            }
        )
    }
)

hidden androidOutput = android.render(languages)
hidden output {
    files {
        for (k,v in androidOutput) {
            [k] {
                renderer = v.renderer
                value = v.value
            }
        }
    }
}