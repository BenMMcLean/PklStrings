typealias Quantity = "zero" | "one" | "two" | "few" | "many" | "other"

class Localizable {
    sourceLanguage: String = "en"
    languages: List<Language>
}

class Language {
    code: String
    strings: List<ResourceString>
}

abstract class ResourceString {
    name: String(matches(Regex("^[a-z\\d_]+$")))
}

class SingleResourceString extends ResourceString {
    value: String
}

class QuantityResourceString extends ResourceString {
    options: List<QuantityOption>

    function first(): String = options[0].value
}

class QuantityOption {
    quantity: Quantity
    value: String
}